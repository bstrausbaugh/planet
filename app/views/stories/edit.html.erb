<h1 class="span-21">Story : <%= @story.name %></h1>

<div class="subnav span-3 last">
  <%= link_to image_tag("/stylesheets/blueprint/plugins/buttons/icons/cross.png") + 'Cancel', @story, :class => "button negative" %>
</div>

<% form_for(@story) do |f| %>
    <div class="span-24 last">
      <%= f.error_messages %>
    </div>
    <div class="span-24 last">
      <%= f.label :name %>
      <br/>
    </div>
    <div class="span-24 last">
      <%= f.text_field :name %>
    </div>
    <div class="span-24 last">
      <%= f.label :description %>
      <br/>
    </div>
    <div class="span-24 last">
      <%= f.text_area :description %>
    </div>
    <div class="span-24 last">
      <%= f.label :tracker %>
      <br/>
    </div>
    <div class="span-24 last">
      <%= f.text_field :tracker %>
    </div>
    <div class="span-24 last">
      <%= f.label :customer %>
      <br/>
    </div>
    <div class="span-24 last">
      <%= f.text_field :customer %>
    </div>
    <div class="span-24 last">
      <%= f.label :estimate %>
      <br/>
    </div>
    <div class="span-24 last">
      <%= f.text_field :estimate %>
    </div>
    <div class="span-24 last">
      <%= f.label :priority %>
      <br/>
    </div>
    <div class="span-24 last">
      <%= f.text_field :priority %>
    </div>
    <div class="span-24 last">
      <button type="submit" class="button positive">
        <img src="/stylesheets/blueprint/plugins/buttons/icons/story_save.png" alt=""/> Update
      </button>
    </div>
<% end %>
