<h1 class="span-21">Project : <%= @project.name %></h1>

<div class="subnav span-3 last">
  <%= link_to image_tag("/stylesheets/blueprint/plugins/buttons/icons/cross.png") + 'Cancel', @project, :class => "button negative" %>
</div>

<% form_for(@project) do |f| %>
  <div class="span-24 last">
    <%= f.error_messages %>
  </div>
  <div class="span-24 last">
    <%= f.label :name %>
  </div>
  <div class="span-24 last">    
    <%= f.text_field :name %>
  </div>
  <div class="span-24 last">
    <%= f.label :description %><br />
  </div>
  <div class="span-24 last">
    <%= f.text_area :description %>
  </div>
  <div class="span-2">
     <%= f.label :hidden %><br />
  </div>
  <div class="span-22 last">
      <%= f.check_box :hidden %>
  </div>
  <div class="span-24 last">
    <button type="submit" class="button positive">
      <img src="/stylesheets/blueprint/plugins/buttons/icons/project.png" alt=""/> Update
    </button>
  </div>
<% end %>

