<h1 class="span-22">Project : <%= @project.name %></h1>

<div class="subnav span-2 right last">
  <%= link_to image_tag("/stylesheets/blueprint/plugins/buttons/icons/project_edit.png", :alt => "") + 'Edit', edit_project_path(@project), :class => "button ui-state-default ui-corner-all" %>
</div>

<div class="description span-24 last">
  <%= @project.description %>
</div>

<hr />

<div class="subnav  span-24 last">
  <p>
    <%= link_to image_tag("/stylesheets/blueprint/plugins/buttons/icons/iteration_new.png") + 'New Iteration', new_project_iteration_path(@project), :class => "button ui-state-default ui-corner-all" %>
  </p>
</div>

<div id="iterations" class="children span-24 last">
<span class="header span-6">Name</span>
<span class="header span-6">Starts</span>
<span class="header span-10">Ends</span>
<span class="span-2 last">&nbsp;</span>
<%= render :partial => @project.iterations %>
</div>
