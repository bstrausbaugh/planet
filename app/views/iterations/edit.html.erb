<h1 class="span-21">Iteration : <%= @iteration.new_record? ? "New" : @iteration.to_s %></h1>

<div class="subnav span-3 last">
  <a href="<%= @iteration.new_record? ? project_path(@project) : iteration_path(@iteration) %>" class="button ui-state-default ui-corner-all">
    <img src="/stylesheets/blueprint/plugins/buttons/icons/cross.png" alt=""/> Cancel
  </a>
</div>

<% form = Proc.new do |f| %>
    <div class="span-24 last">
      <%= error_messages_for :iteration %>
    </div>
    <div class="span-24 last">
      <%= f.label :name %>
      <br/>
    </div>
    <div class="span-24 last">
      <%= f.text_field :name %>
    </div>
    <div class="span-24 last">
      <%= f.label :description %>
      <br/>
    </div>
    <div class="span-24 last">
      <%= f.text_area :description %>
    </div>
    <div class="span-24 last">
      <%= f.label :start_on, "Starts on" %>
      <br/>
    </div>
    <div class="span-24 last">
      <%= f.date_select :start_on %>
      <input type="text" value="4/23/99" id="rangeA" />
    </div>

    


    <div class="span-24 last">
      <%= f.label :end_on, "Ends on" %>
      <br/>
    </div>
    <div class="span-24 last">
      <%= f.date_select :end_on %>
    </div>
    <div class="span-24 last">
      <button type="submit" class="button ui-state-default ui-corner-all">
        <img src="/stylesheets/blueprint/plugins/buttons/icons/iteration.png" alt=""/> <%= @iteration.new_record? ? "Create" : "Update" %> 
      </button>
    </div>
<% end %>
<% @iteration.new_record? ? form_for([@project, Iteration.new], &form) : form_for(@iteration, &form) %>
