<h1 class="span-21">Iteration : New</h1>

<div class="subnav span-3 last">
  <%= link_to image_tag("/stylesheets/blueprint/plugins/buttons/icons/cross.png") + 'Cancel', @project, :class => "button negative" %>
</div>

<% form_for([@project, Iteration.new]) do |f| %>
    <div class="span-24 last">
      <%= error_messages_for :iteration %>
    </div>
    <div class="span-24 last">
      <%= f.label :name %>
      <br/>
    </div>
    <div class="span-24 last">
      <%= f.text_field :name %>
    </div>
    <div class="span-24 last">
      <%= f.label :description %>
      <br/>
    </div>
    <div class="span-24 last">
      <%= f.text_area :description %>
    </div>
    <div class="span-24 last">
      <%= f.label :start_on, "Starts on" %>
      <br/>
    </div>
    <div class="span-24 last">
      <%= f.date_select :start_on %>
    </div>
    <div class="span-24 last">
      <%= f.label :end_on, "Ends on" %>
      <br/>
    </div>
    <div class="span-24 last">
      <%= f.date_select :end_on %>
    </div>
    <div class="span-24 last">
      <button type="submit" class="button positive">
        <img src="/stylesheets/blueprint/plugins/buttons/icons/iteration.png" alt=""/> Create
      </button>
    </div>
<% end %>
