<h1>New iteration</h1>

<% form_for([@project, Iteration.new]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :start_on %><br />
    <%= f.date_select :start_on %>
	  </p>
  <p>
    <%= f.label :end_on %><br />
    <%= f.date_select :end_on %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', iterations_path %>